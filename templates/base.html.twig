<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="La boutique qui vend uniquement du made in France.">
    <meta name="generator" content="Jekyll v4.1.1">
    <title>{% block title %}sweetdate - 100% Made in France{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <!-- Tablet and mobile -->
    {# <link rel="stylesheet" media="(max-width:768px)" href="css/tablettes.css">  #}
    <link rel="stylesheet" media="(max-width:820px)" href="css/Ipad.css">
    <link rel="stylesheet" media="(max-width:500px)" href="css/mobile.css"> 
    <link rel="stylesheet" media="(max-width:768px)" href="css/tablette.css"> 
    {% block javascript %}
    {% endblock %}
     <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        @media only screen and (max-width:820px) {
            .text-carousel-tablet{
                margin-left : -120px;
                margin-right: -120px;
                padding-left: 10%;
                padding-right: 10%;
                background-color: rgb(0, 0, 0,0.2);
                }
            .img-position{    
                margin-left: 0;
                padding-right: 100%;
                background-position: center;
                border-radius: 0; 
            }

        }
        @media only screen and (max-width:768px) {
            .text-carousel-tablet{
                margin-left : -110%;
                margin-right: -25%;
                 padding-left: 95%;
                background-color: rgb(0, 0, 0,0.2);
                }
            .img-position{    
                margin-left: 0;
                padding-right: 100%;
                background-position: center;
                border-radius: 0; 
            }

        }
        @media only screen and (max-width:500px) {
            .text-carousel-tablet{
                margin-left : 0%;
                margin-right: -40px; 
                padding-left: 25%; 
                padding-right: 0%;  
                background-color: rgb(0, 0, 0,0.2);
                }
             .img-position{    
                margin-left: -80% ;
                padding-right: 200%;
                border-radius: 0; 
            } 
        }
    </style>  
    <!-- Custom styles for this template -->
    <link href="{{ asset('css/carousel.css') }}" rel="stylesheet">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="{{ path('app_home') }}">Sweetdate</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link " href="{{ path('app_products') }}"> Nos produits </a>
                </li>

                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('app_contact') }}">  Contact</a>
                </li>
            </ul>
            <div class="navbar-item-custom">             
                {% if app.user %}
                    <a href="{{ path('app_acount') }}">  Mon compte <small>({{ app.user.firstname }})</small></a> | <a href="{{ path('app_logout') }}">Déconnexion</a>
                {% else %}
                    <a href="{{ path('app_login') }}">  Connexion </a> | <a href="{{ path('app_register') }}"> Inscription </a>
                {% endif %}
            </div>
            <a href="{{ path('app_cart') }}">
                <img src="{{ asset('img/shopping-cart.png') }}" class="cart-icon cart-mobile" alt="Mon panier">
            </a>
        </div>
    </nav>
</header>

<main role="main">

   {% if block('carousel') is defined %}
    <div id="myCarousel" class="carousel" data-ride="carousel">
        <ol class="carousel-indicators">
            {% for key,header in headers %}
                <li data-target="#myCarousel" data-slide-to="{{ key }}" {% if key == 0 %}class= "active"{% endif %}></li>
            {% endfor %}
        </ol>
        <div class="carousel-inner lefont">
            {% for key,header in headers %}
            <div class="carousel-item img-position w-50 cart img-position-tablet {% if key == 0 %}active{% endif %}" style="background: url('/uploads/{{ header.illustration }}');background-size:cover;">
                <div class="container">
                    <div class="carousel-caption  text-carousel text-carousel-tablet">
                        <h1 id="text-carousel">{{ header.title }}</h1>
                        <p id= "text-carousel" class="carousel-content">{{ header.content }}</p>
                        <p id="text-carousel"><a class="btn btn-lg btn-info" href="{{ header.btnUrl }}" role="button">{{ header.btnTitle }}</a></p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    {% endif %}


    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container marketing {% if block('carousel') is not defined %}mt-5{% endif %}">

        {% block content %}
        {% endblock %}

    </div><!-- /.container -->

 

<!-- Footer -->
<footer class="bg-dark text-center text-white footer-custom">
  <!-- Grid container -->
  <div class="container p-4 ">
    <!-- Section: Social media -->
    <section class="mb-4">
      <!-- Facebook -->
      <a class="btn btn-outline-light social-media-facebook" href= "https://www.facebook.com/"  role="button" target="_blank"
        ><i class="fab fa-facebook-f"></i
      ></a>
      <!-- Twitter -->
      <a class="btn btn-outline-light btn-floating m-1 social-media-twitter" href=  "https://www.twitter.com"   role="button" target="_blank"
        ><i class="fab fa-twitter"></i
      ></a>
      <!-- Instagram -->
      <a class="btn btn-outline-light btn-floating m-1 social-media-instagram" href="https://www.instagram.com" role="button" target="_blank"
        ><i class="fab fa-instagram"></i
      ></a>
      <!--Tiktok-->
       <a class="btn btn-outline-light btn-floating m-1 social-media-tiktok" href="https://www.tiktok.com" role="button" target="_blank"
       ><i class="fab fa-tiktok"></i
       ></a>
 
    </section>
    <!-- Section: Social media -->


    <!-- Section: Text -->
    <section class="mb-4 footer-mobile">
      <p class="footer-mobile">
                Sweetdate  <br/>
                8 rue des lylas fleuris  <br/>
                75000 Paris  <br/>
      </p>
    </section>
    <!-- Section: Text -->

     </div>
  <!-- Grid container -->

  <!-- Copyright -->
  <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
      © Depuis 1991 <br/>
    <small class="copyright"> La boutique 100% made in France basé sur les gateaux spécialité Turc <br/>
   
  </div>
  <!-- Copyright -->
</footer>


</main>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="{{ asset('js/bootstrap.bundle.js') }}"></script>
<script type="text/javascript">

</script>
</body>
{% block script %}
{% endblock %}
</html>







