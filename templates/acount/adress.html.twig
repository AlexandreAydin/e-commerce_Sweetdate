{% extends 'base.html.twig' %}

{% block title %} Mes adresse
{% endblock %}

{% block content %}
    <a href="{{ path ('app_account_adress_add') }}" class = "btn btn-info btn-sm float-right "> Ajouter une adresse </a>
	<h1> Mes Adresse </h1>
		<p> C'est dans cet espace que vous allez povoir gÃ©rer toutes vos adresse.</p>
        <a href ="{{ path ('app_acount') }}"> Retour </a>
      
	<hr>
	{% if app.user.adresses|length == 0  %}

        <p class="text-center">
             Vous n'avza pas encore ajouter d'adresse dans votre compte client. Pour en ajouter une veuillez   <a href="{{ path ('app_account_adress_add') }}">cliquer ici</a>
        </p>
    {% else %}
        <div class="row">
            {% for adress in app.user.adresses %}
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ adress.name }}</h5>
                            <p class="card-text">
                                {{ adress.adress }},<br/>
                                {{ adress.postal }} - {{ adress.city }} - {{ adress.country }}
                            </p>
                             <a href="{{ path('app_account_adress_edit', { 'id' : adress.id }) }}">Modifier</a> | <a href="{{ path('app_account_adress_delete', { 'id' : adress.id }) }}">Supprimer</a> 
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

{% endblock %}
